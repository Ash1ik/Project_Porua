<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".swap_page">


    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="247dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="125dp"
                android:layout_marginStart="23dp"
                android:background="@drawable/my_book_01"

                />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="125dp"
                android:layout_marginStart="23dp"
                android:background="@drawable/my_book_02" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="125dp"
                android:layout_marginStart="23dp"
                android:background="@drawable/my_book_03" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="125dp"
                android:layout_marginStart="23dp"
                android:background="@drawable/novel_01" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="125dp"
                android:layout_marginStart="23dp"
                android:background="@drawable/thriller_01" />


        </LinearLayout>

    </HorizontalScrollView>

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/continue_with_button"
        android:backgroundTint="@color/cat_button_stroke"
        android:gravity="center"
        android:text="@string/recomended_books"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    <HorizontalScrollView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="125dp"
                android:layout_marginStart="23dp"
                android:background="@drawable/recomend_01"

                />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="125dp"
                android:layout_marginStart="23dp"
                android:background="@drawable/recomend_02" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="125dp"
                android:layout_marginStart="23dp"
                android:background="@drawable/recomend_03" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="125dp"
                android:layout_marginStart="23dp"
                android:background="@drawable/poetry_01" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="125dp"
                android:layout_marginStart="23dp"
                android:background="@drawable/poetry_02" />


        </LinearLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/icon_home" />

        <ImageButton
            android:id="@+id/favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="33dp"
            android:background="@drawable/icon_favorite" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="33dp"
            android:background="@drawable/ic_swap" />

        <ImageButton
            android:id="@+id/Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="33dp"
            android:background="@drawable/icon_user" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="33dp"
            android:background="@drawable/icon_menu" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSwap"
        android:layout_width="110dp"
        android:layout_height="35dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/continue_with_button"
        android:backgroundTint="@color/cat_button_stroke"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/swap"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/ivAdminSwapBook"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageButton
        android:id="@+id/imageView2"
        android:layout_width="80dp"
        android:layout_height="125dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/uploadbook"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@drawable/ic_swap"
        app:layout_constraintEnd_toStartOf="@+id/ivAdminSwapBook"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivAdminSwapBook"
        android:layout_width="80dp"
        android:layout_height="125dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="68dp"
        android:background="@drawable/thriller_01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>