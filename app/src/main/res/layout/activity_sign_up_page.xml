<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signUp_Page"
    android:orientation="vertical"
    >


  <TextView
      android:id="@+id/textView6"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:layout_marginTop="30dp"
      android:text="@string/create_your_account"
      android:textStyle="bold"
      android:textSize="24sp"
      android:textColor="@color/black"
      tools:ignore="Suspicious0dp" />
  <EditText
      android:id="@+id/editTextTextEmailAddress"
      android:layout_width="334dp"
      android:layout_height="45dp"
      android:layout_gravity="center"
      android:layout_marginBottom="12dp"
      android:inputType="textEmailAddress"
      android:layout_marginTop="43dp"
      android:background="@drawable/edittext_design"
      android:drawableStart="@drawable/ic_email"
      android:paddingStart="10dp"
      android:hint="@string/enter_your_e_mail_address"
      android:drawablePadding="8dp"
      tools:ignore="RtlSymmetry" />
  <EditText
      android:id="@+id/editTextTextPassword"
      android:layout_width="334dp"
      android:layout_height="45dp"
      android:layout_gravity="center"
      android:inputType="textPassword"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="21dp"
      android:hint="@string/password"
      android:drawablePadding="8dp"
      android:background="@drawable/edittext_design"
      android:drawableEnd="@drawable/password_icon"
      android:paddingEnd="10dp"
      android:drawableStart="@drawable/ic_lock"
      android:paddingStart="10dp"
      tools:ignore="RtlSymmetry" />

  <TextView
      android:id="@+id/textView7"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/password_with_6_or_more_characters"
      android:textColor="@color/black"
      android:textSize="14sp"
      android:layout_marginStart="40dp"
      />

  <EditText
      android:id="@+id/editTextTextConfirmPassword"
      android:layout_width="334dp"
      android:layout_height="45dp"
      android:layout_gravity="center"
      android:inputType="textPassword"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="21dp"
      android:hint="@string/confirm_password"
      android:drawablePadding="8dp"
      android:background="@drawable/edittext_design"
      android:drawableEnd="@drawable/password_icon"
      android:paddingEnd="10dp"
      android:drawableStart="@drawable/ic_lock"
      android:paddingStart="10dp" />

  <Button
      android:id="@+id/nextto_birth"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="51dp"
      android:layout_marginLeft="45dp"
      android:layout_marginRight="45dp"
      android:layout_marginBottom="25dp"
      android:backgroundTint="@color/Google"
      android:background="@drawable/continue_with_button"
      android:text="@string/next"
      android:textColor="@color/black"
      android:textSize="18sp"


      />

</LinearLayout>